<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="memberdetails"
            type="com.example.mikki.projectmanagement.data.model.MemberDetails" />

        <variable
            name="space"
            type="String" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/dialogFragmentWidth"
        android:layout_height="@dimen/dialogFragmentHeight"
        android:layout_gravity="center"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:backgroundTint="@color/primary_dark"
            android:padding="20dp"
            android:text="Assign a Member"
            android:textColor="@color/icons"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name: " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last: " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number: " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/icons"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_memberdetails_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{memberdetails.userfirstname}" />

                <TextView
                    android:id="@+id/tv_memberdetails_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{memberdetails.userlastname}" />

                <TextView
                    android:id="@+id/tv_memberdetails_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{memberdetails.usermobile}" />

                <TextView
                    android:id="@+id/tv_memberdetails_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{memberdetails.useremail}" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</layout>