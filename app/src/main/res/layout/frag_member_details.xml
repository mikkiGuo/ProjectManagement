<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="memberdetails"
            type="com.example.mikki.projectmanagement.data.model.MemberDetails" />

        <variable
            name="space"
            type="String" />
    </data>

    <RelativeLayout
        android:layout_width="@dimen/dialogFragmentWidth"
        android:layout_height="@dimen/dialogFragmentHeight"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_memberdetailsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark"
            android:padding="20dp"
            android:text="Member Details"
            android:textColor="@color/icons"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_memberdetailsTitle"
            android:background="@color/icons"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/icons"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Name: "
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last: "
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile Number: "
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email: "
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:background="@color/icons"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_memberdetails_fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{memberdetails.userfirstname}"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_memberdetails_lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{memberdetails.userlastname}"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_memberdetails_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{memberdetails.usermobile}"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_memberdetails_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{memberdetails.useremail}"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bt_details_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_arrow_24dp"/>

    </RelativeLayout>

</layout>