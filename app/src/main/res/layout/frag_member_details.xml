<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="memberdetails"
            type="com.example.mikki.projectmanagement.data.model.MemberDetails" />

        <variable
            name="space"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:padding="20dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_memberdetails_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{memberdetails.userfirstname}" />

        <TextView
            android:id="@+id/tv_memberdetails_lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{memberdetails.userlastname}" />

        <TextView
            android:id="@+id/tv_memberdetails_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{memberdetails.usermobile}" />

        <TextView
            android:id="@+id/tv_memberdetails_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{memberdetails.useremail}" />
    </LinearLayout>
</layout>