<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="task"
            type="com.example.mikki.projectmanagement.data.model.taskmodel.TaskItem" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/icons"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_card"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/bt_edit_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/details_layout"
                android:layout_alignEnd="@+id/details_layout"
                android:background="@drawable/ic_cancel_24dp" />

            <LinearLayout
                android:id="@+id/details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/et_details_name"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:text="@{task.taskname}"
                        android:textColor="@color/primary_text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User ID:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_details_userID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:text="@{task.userid}"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project ID:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_details_projID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:text="@{task.projectid}"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task ID:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_details_taskID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:text="@{task.taskid}"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="15dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_details_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:text="@{task.taskstatus}"
                        android:textSize="16sp" />

                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <EditText
                    android:id="@+id/et_details_desc"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/background_taskdetails"
                    android:enabled="false"
                    android:gravity="start"
                    android:padding="10dp"
                    android:text="@{task.taskdesc}"
                    android:textColor="@color/secondary_text"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Start Date:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_details_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:text="@{task.startdate}"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="End Date:"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_details_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:gravity="center_horizontal"
                        android:text="@{task.endstart}"
                        android:textSize="16sp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/members_assigned_to_this_task"
                        android:textSize="16sp" />

                    <Space
                        android:layout_width="30dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/bt_details_assignUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button"
                        android:text="Assign Member"
                        android:textColor="@color/icons"
                        android:textSize="12dp" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_taskMembers"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/background_taskdetails"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_details_showSubTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details_layout"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:background="@drawable/background_button"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Show SubTasks"
                android:textColor="@color/icons" />

            <Space
                android:id="@+id/space2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@id/bt_details_showSubTasks" />

            <Button
                android:id="@+id/bt_details_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/space2"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:background="@drawable/background_button"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Edit Task Details"
                android:textColor="@color/icons" />
        </RelativeLayout>
    </LinearLayout>


</layout>