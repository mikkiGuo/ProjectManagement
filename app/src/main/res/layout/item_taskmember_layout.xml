<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="member"
            type="com.example.mikki.projectmanagement.data.model.taskmodel.TaskMemberItem"/>
        <variable
            name="space"
            type="String"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_member_userID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{member.memberdetails.userfirstname + space + member.memberdetails.userlastname}" />
    </LinearLayout>
</layout>