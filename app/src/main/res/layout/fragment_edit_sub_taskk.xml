<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/icons">

    <LinearLayout
        android:id="@+id/editSTLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/icons">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Edit SubTask"/>

        <EditText
            android:id="@+id/etEditStProjectId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Project ID"/>

        <EditText
            android:id="@+id/etEditStTaskId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Task ID"/>

        <EditText
            android:id="@+id/etEditStName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask Name"/>

        <EditText
            android:id="@+id/etEditStStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask Status"/>

        <EditText
            android:id="@+id/etEditStDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask Description"/>

        <EditText
            android:id="@+id/etEditStStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask Start Date"/>

        <EditText
            android:id="@+id/etEditStEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask EndDate"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btEditSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:text="Update"
                android:textStyle="bold"
                android:background="@color/accent"/>

            <Button
            android:id="@+id/btBackSubTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Back"
            android:textStyle="bold"
            android:background="@color/accent"/>

            <Button
                android:id="@+id/btAssignSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Assign"
                android:textStyle="bold"
                android:background="@color/accent"/>

            <EditText
                android:id="@+id/etAssignSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="User Id:"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewSTLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="@color/icons">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="SubTask Details"/>

        <TextView
            android:id="@+id/tvEditStProjectId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Project ID"/>

        <TextView
            android:id="@+id/tvEditStTaskId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Task ID"/>

        <TextView
            android:id="@+id/tvEditStName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask Name"/>

        <TextView
            android:id="@+id/tvEditStStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask Status"/>

        <EditText
            android:id="@+id/etUserUpdateStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Status"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvEditStDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask Description"/>

        <TextView
            android:id="@+id/tvEditStStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask Start Date"/>

        <TextView
            android:id="@+id/tvEditStEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="SubTask EndDate"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btShowEditSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Edit"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:background="#efbe78"/>

            <Button
                android:id="@+id/btUserUpdateStatusSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="StatusUpDate"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:background="#efbe78"/>

            <Button
                android:id="@+id/btViewBackSubTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Back"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:background="#efbe78"/>

            <EditText
                android:id="@+id/etUserIDUpdateStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="User Id"/>

        </LinearLayout>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_subTaskMembers"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scrollbars="vertical" />

</LinearLayout>